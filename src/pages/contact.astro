---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Kontaktujte nás - ElectriSolar">
  <h1 class="text-4xl font-bold mb-8 text-center">Kontaktujte nás</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold mb-4">Kontaktní informace</h2>
      <ul class="space-y-2">
        <li><strong>Telefon:</strong> +420 123 456 789</li>
        <li><strong>E-mail:</strong> info@electrisolar.cz</li>
        <li><strong>Adresa:</strong> Hlavní 123, 110 00 Praha 1</li>
      </ul>
      <h3 class="text-xl font-semibold mt-6 mb-2">Otevírací doba</h3>
      <ul class="space-y-1">
        <li>Pondělí - Pátek: 8:00 - 18:00</li>
        <li>Sobota: 9:00 - 14:00</li>
        <li>Neděle: Zavřeno</li>
      </ul>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold mb-4">Napište nám</h2>
      <form 
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        class="space-y-4"
      >
        <p class="hidden">
          <label>
            Don't fill this out if you're human: <input name="bot-field" />
          </label>
        </p>
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Jméno</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
          >
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">E-mail</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
          >
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700">Zpráva</label>
          <textarea 
            id="message" 
            name="message" 
            rows="4" 
            required 
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
          ></textarea>
        </div>
        <button 
          type="submit" 
          class="bg-primary text-white px-4 py-2 rounded-md hover:bg-blue-600 transition-colors w-full"
        >
          Odeslat zprávu
        </button>
      </form>
    </div>
  </div>
</Layout>